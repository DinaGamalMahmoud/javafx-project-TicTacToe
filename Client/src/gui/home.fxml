<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane id="home" hgap="5" styleClass="mainFxmlClass" vgap="5" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.HomeController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <GridPane id="Info" alignment="CENTER" hgap="10" prefHeight="600" prefWidth="500" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>
        <GridPane id="human" alignment="CENTER" hgap="10" prefHeight="250" prefWidth="500" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <padding>
                <Insets bottom="10" left="50" right="10" top="10" />
            </padding>
            <GridPane id="all" alignment="CENTER" hgap="10" prefHeight="300" prefWidth="250" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <padding>
                    <Insets bottom="10" left="00" right="10" top="10" />
                </padding>
                <GridPane id="name" hgap="10" prefHeight="150" prefWidth="250" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <Label fx:id="playerName" text="Player" GridPane.columnIndex="0" GridPane.rowIndex="3" />
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <GridPane id="score" hgap="10" prefHeight="150" prefWidth="250" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="10" left="00" right="10" top="10" />
                    </padding>
                    <Label id="lbl" text="Score:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="playerScore" text="XXXX" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <GridPane id="buttons" alignment="CENTER" hgap="30" prefHeight="100" prefWidth="500" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
            <HBox spacing="1" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Button fx:id="invite" onAction="#handleButton_invite_Action" text="    Invite Player    " />
            </HBox>
            <HBox spacing="1" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Button fx:id="arcade" onAction="#handleButton_arcade_Action" text="Play VS Computer" />
            </HBox>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <GridPane id="opponent" alignment="CENTER" hgap="10" prefHeight="250" prefWidth="500" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <padding>
                <Insets bottom="10" left="50" right="10" top="10" />
            </padding>
            <GridPane id="all" alignment="CENTER" hgap="10" prefHeight="300" prefWidth="250" vgap="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <padding>
                    <Insets bottom="10" left="00" right="10" top="10" />
                </padding>
                <GridPane id="name" hgap="10" prefHeight="150" prefWidth="250" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
               <columnConstraints>
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
                <GridPane id="score" hgap="10" prefHeight="150" prefWidth="250" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <padding>
                        <Insets bottom="10" left="00" right="10" top="10" />
                    </padding>
               <columnConstraints>
                  <ColumnConstraints />
                  <ColumnConstraints />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints> 
                </GridPane>
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
         </rowConstraints>
        </GridPane>
      <columnConstraints>
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <GridPane id="playersList" hgap="10" prefHeight="600" prefWidth="300" vgap="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
        </padding>
        <Label text="Choose your opponent" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
        <Label text="                               " GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TableView fx:id="allPlayersTable" prefHeight="500" styleClass="table" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="colUsername" prefWidth="100" text="Player">
                </TableColumn>
                <TableColumn fx:id="colStatus" prefWidth="80" text="Status">
                </TableColumn>
                <TableColumn fx:id="colScore" prefWidth="60" text="Score">
                </TableColumn>
            </columns>    
        </TableView>
        <HBox spacing="1" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <Button fx:id="logout" onAction="#handleButton_logout_Action" text="logout" />
        </HBox>
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>
    <stylesheets>
        <URL value="@../gui/home.css" />
    </stylesheets>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
